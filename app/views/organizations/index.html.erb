<div class="page-header">
  <h1>Organizations</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        People
      </th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td>
          <%= link_to organization.name, organization_path(organization) %>
        </td>
        <td>
          <% organization.people.each do |person| %>
            <%= link_to person.name, person_path(person) %> &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
