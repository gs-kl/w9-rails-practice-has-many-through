<div class="page-header">
  <h1>People</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Organizations
      </th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td>
          <%= link_to person.name, person_path(person) %>
        </td>
        <td>
          <% person.organizations.each do |organization| %>
            <%= link_to organization.name, organization_path(organization) %> &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
